{
    "name": "§7o §r§nLast Wish",
    "description": "While the Obliterate effect is ticking, hold down the key to explode early.",
    "type": "origins:multiple",
    "activate": {
        "condition": {
            "type": "origins:resource",
            "resource": "icosahedron_origins:spirit/obliterate_resource",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:set_resource",
                    "resource": "icosahedron_origins:spirit/last_wish_constant_hold_resource",
                    "value": 1
                },
                {
                    "type": "origins:change_resource",
                    "resource": "icosahedron_origins:spirit/last_wish_hold_resource",
                    "change": 1,
                    "operation": "add"
                }
            ]
        },
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        }
    },
    "hold_resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 10,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_01.png",
            "bar_index": 3,
            "condition": {
                "type": "origins:resource",
                "resource": "icosahedron_origins:spirit/last_wish_hold_resource",
                "comparison": ">",
                "compare_to": 0
            }
        },
        "max_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "icosahedron_origins:spirit/obliterate_resource",
                    "change": 56,
                    "operation": "set"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "icosahedron_origins:spirit/last_wish_hold_resource",
                    "change": 0,
                    "operation": "set"
                }
            ]
        }
    },
    "constant_hold_resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 1
    },
    "decrement": {
        "condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "icosahedron_origins:spirit/obliterate_resource",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "icosahedron_origins:spirit/last_wish_hold_resource",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "icosahedron_origins:spirit/last_wish_constant_hold_resource",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "icosahedron_origins:spirit/last_wish_constant_hold_resource",
                "comparison": ">=",
                "compare_to": 1
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "icosahedron_origins:spirit/last_wish_constant_hold_resource",
                "change": 0,
                "operation": "set"
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "icosahedron_origins:spirit/last_wish_hold_resource",
                "change": 0,
                "operation": "set"
            }
        }
    }
}