{
    "name": "§a+ §r§nCling",
    "description": "Jump up and hold on to any ceiling you touch.",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": "Works as a double jump too",
            "sprite": "origins:textures/gui/badge/info.png"
        }
    ],
    "type": "origins:multiple",
    "stick": {
        "condition": {
            "type": "origins:resource",
            "resource": "icosahedron_origins:cave/ceiling_climb_resource",
            "comparison": "!=",
            "compare_to": 0
        },
        "type": "origins:action_over_time",
        "interval": 2,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:block_collision",
                        "block_condition": {
                            "type": "origins:movement_blocking"
                        },
                        "offset_x": 0,
                        "offset_y": 1,
                        "offset_z": 0
                    },
                    {
                        "inverted": true,
                        "type": "origins:sneaking"
                    }
                ]
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:apply_effect",
                        "effect": {
                            "effect": "minecraft:levitation",
                            "duration": 4,
                            "amplifier": 1,
                            "show_particles": false,
                            "show_icon": false
                        }
                    },
                    {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:resource",
                            "resource": "icosahedron_origins:cave/ceiling_climb_resource",
                            "comparison": "<",
                            "compare_to": 5
                        },
                        "if_action": {
                            "type": "origins:set_resource",
                            "resource": "icosahedron_origins:cave/ceiling_climb_resource",
                            "value": 4
                        }
                    }
                ]
            },
            "else_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "icosahedron_origins:cave/ceiling_climb_resource",
                        "change": -1,
                        "operation": "add"
                    }
                ]
            }
        }
    },
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 10
    },
    "jump": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "inverted": true,
                    "type": "origins:fall_flying"
                },
                {
                    "type": "origins:resource",
                    "resource": "icosahedron_origins:cave/ceiling_climb_resource",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "icosahedron_origins:cave/ceiling_climb_resource",
                    "change": 10,
                    "operation": "set"
                },
                {
                    "type": "origins:add_velocity",
                    "y": 0.7,
                    "space": "world",
                    "client": true,
                    "server": true,
                    "set": true
                },
                {
                    "type": "origins:add_velocity",
                    "z": 0.2,
                    "space": "local",
                    "client": true,
                    "server": true
                },
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:entity.camel.dash",
                    "volume": 1,
                    "pitch": 1
                },
                {
                    "type": "origins:spawn_particles",
                    "particle": "minecraft:cloud",
                    "count": 8,
                    "speed": 0.2,
                    "spread": {
                        "x": 0.5,
                        "y": 0.2,
                        "z": 0.5
                    }
                },
                {
                    "type": "origins:exhaust",
                    "amount": 0.7
                }
            ]
        },
        "cooldown": 300,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 3
        },
        "key": {
            "key": "key.origins.primary_active"
        }
    }
}