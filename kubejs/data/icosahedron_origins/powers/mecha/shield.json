{
    "name": "§a+ §r§nShield Bubble",
    "description": "Near invincible while active, recharges via hunger while not in use.",
    "type": "origins:multiple",
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 150,
        "start_value": 150,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "condition": {
                "type": "origins:constant",
                "value": true
            }
        },
        "min_action": {
            "type": "origins:toggle",
            "power": "icosahedron_origins:mecha/shield_toggle"
        }
    },
    "toggle": {
        "condition": {
            "type": "origins:resource",
            "resource": "icosahedron_origins:mecha/shield_resource",
            "comparison": ">=",
            "compare_to": 10
        },
        "type": "origins:toggle",
        "active_by_default": false,
        "key": {
            "key": "key.origins.primary_active"
        },
        "retain_state": false
    },
    "modify": {
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:power_active",
                "power": "icosahedron_origins:mecha/shield_toggle"
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "icosahedron_origins:mecha/shield_resource",
                "change": -10,
                "operation": "add"
            },
            "else_action": {
                "type": "origins:if_else",
                "condition": {
                    "type": "origins:food_level",
                    "comparison": ">=",
                    "compare_to": 6
                },
                "if_action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:exhaust",
                            "amount": 0.1
                        },
                        {
                            "type": "origins:change_resource",
                            "resource": "icosahedron_origins:mecha/shield_resource",
                            "change": 1,
                            "operation": "add"
                        }
                    ]
                }
            }
        }
    },
    "protect": {
        "condition": {
            "type": "origins:power_active",
            "power": "icosahedron_origins:mecha/shield_toggle"
        },
        "type": "origins:modify_damage_taken",
        "modifier": {
            "operation": "multiply_total",
            "value": -0.99,
            "name": "Shield Protection"
        },
        "self_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:spawn_particles",
                    "particle": "minecraft:electric_spark",
                    "count": 16,
                    "speed": 0.1,
                    "spread": {
                        "x": 0.5,
                        "y": 0.75,
                        "z": 0.5
                    },
                    "offset_y": 1
                },
                {
                    "type": "origins:exhaust",
                    "amount": 0.3
                },
                {
                    "type": "origins:change_resource",
                    "resource": "icosahedron_origins:mecha/shield_resource",
                    "change": -5,
                    "operation": "add"
                }
            ]
        },
        "damage_armor_condition": {
            "type": "origins:constant",
            "value": false
        }
    },
    "glow_resource": {
        "type": "origins:resource",
