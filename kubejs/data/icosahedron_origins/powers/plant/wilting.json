{
    "name": "§c- §r§nWilting",
    "description": "Avoiding sun or water for too long weakens you",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": "You can go 14.5 minutes without sun and 8.3 without water ",
            "sprite": "origins:textures/gui/badge/info.png"
        },
        {
            "type": "origins:tooltip",
            "text": "Golden food supplements sun and water bottles, rain, and submerging yourself help with thrist",
            "sprite": "origins:textures/gui/badge/info.png"
        }
    ],
    "type": "origins:multiple",
    "sun_meter": {
        "type": "origins:resource",
        "min": 0,
        "max": 350,
        "start_value": 350,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 15,
            "condition": {
                "type": "origins:constant",
                "value": true
            }
        }
    },
    "water_meter": {
        "type": "origins:resource",
        "min": 0,
        "max": 200,
        "start_value": 200,
        "hud_render": {
            "should_render": true,
            "bar_index": 1,
            "condition": {
                "type": "origins:constant",
                "value": true
            }
        }
    },
    "modify": {
        "type": "origins:action_over_time",
        "interval": 50,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:exposed_to_sun"
                    },
                    "if_action": {
                        "type": "origins:change_resource",
                        "resource": "icosahedron_origins:plant/wilting_sun_meter",
                        "change": 50,
                        "operation": "add"
                    },
                    "else_action": {
                        "type": "origins:change_resource",
                        "resource": "icosahedron_origins:plant/wilting_sun_meter",
                        "change": -1,
                        "operation": "add"
                    }
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:or",
                        "conditions": [
                            {
                                "type": "origins:fluid_height",
                                "fluid": "minecraft:water",
                                "comparison": ">=",
                                "compare_to": 0.1
                            },
                            {
                                "type": "origins:in_rain"
                            }
                        ]
                    },
                    "if_action": {
                        "type": "origins:change_resource",
                        "resource": "icosahedron_origins:plant/wilting_water_meter",
                        "change": 50,
                        "operation": "add"
                    },
                    "else_action": {
                        "type": "origins:change_resource",
                        "resource": "icosahedron_origins:plant/wilting_water_meter",
                        "change": -1,
                        "operation": "add"
                    }
                }
            ]
        }
    },
    "drink": {
        "type": "origins:action_on_item_use",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "icosahedron_origins:plant/wilting_water_meter",
            "change": 50,
            "operation": "add"
        },
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "item": "minecraft:potion"
            }
        },
        "trigger": "finish",
        "priority": 0
    },
    "eat_sun": {
        "type": "origins:action_on_item_use",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "icosahedron_origins:plant/wilting_sun_meter",
            "change": 125,
            "operation": "add"
        },
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "tag": "icosahedron_origins:gilded_food"
            }
        },
        "trigger": "finish",
        "priority": 0
    },
    "weaken": {
        "condition": {
            "type": "origins:resource",
            "resource": "icosahedron_origins:plant/wilting_sun_meter",
            "comparison": "==",
            "compare_to": 0
        },
        "type": "origins:stacking_status_effect",
        "min_stacks": 0,
        "max_stacks": 5,
        "duration_per_stack": 40,
        "tick_rate": 40,
        "effects": [
            {
                "effect": "minecraft:weakness",
                "duration": 40,
                "amplifier": 0,
                "show_particles": true,
                "show_icon": true
            }
        ]
    },
    "slowed": {
        "condition": {
            "type": "origins:resource",
            "resource": "icosahedron_origins:plant/wilting_water_meter",
            "comparison": "==",
            "compare_to": 0
        },
        "type": "origins:stacking_status_effect",
        "min_stacks": 0,
        "max_stacks": 5,
        "duration_per_stack": 40,
        "tick_rate": 40,
        "effects": [
            {
                "effect": "minecraft:slowness",
                "duration": 40,
                "amplifier": 0,
                "show_particles": true,
                "show_icon": true
            }
        ]
    }
}